### FARCASTER CONFIGURATION ###
# Required for Farcaster integration
FARCASTER_NEYNAR_API_KEY=  # Get from https://neynar.com
FARCASTER_NEYNAR_SIGNER_UUID=  # Get from Neynar dashboard
FARCASTER_FID=  # Your Farcaster ID number

# Optional Farcaster settings
# FARCASTER_DRY_RUN=true  # Set to false in production
# MAX_CAST_LENGTH=320  # Default cast length limit
# FARCASTER_POLL_INTERVAL=15  # Minutes between polling for new interactions
# ENABLE_POST=true  # Enable automatic posting
# POST_INTERVAL_MIN=8  # Minimum hours between posts
# POST_INTERVAL_MAX=24  # Maximum hours between posts
# ENABLE_ACTION_PROCESSING=true  # Enable processing replies and mentions
# ACTION_INTERVAL=15  # Minutes between checking for actions
# POST_IMMEDIATELY=false  # Post immediately on startup
# MAX_ACTIONS_PROCESSING=50  # Maximum number of actions to process in one batch
# ACTION_TIMELINE_TYPE=home  # Timeline type to monitor (home, custom_cast_id, user_activity)
